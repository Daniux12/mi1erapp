<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">

    <!--Texto de bienveni@-->
    <TextView
        android:id="@+id/textView"
        android:layout_width="415dp"
        android:layout_height="90dp"
        android:background="@color/damasco"
        android:gravity="center"
        android:text="Bienvenid@ a fitkal !"
        android:textAlignment="center"
        android:textAppearance="@color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,MissingConstraints" />

    <!--Boton para registrarse con bordes de color rojo-->
    <Button
        android:id="@+id/registrarse"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="235dp"
        android:layout_height="75dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/piel"
        android:text="Registrarse"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:cornerRadius="80dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSalir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/damasco"
        tools:ignore="HardcodedText,MissingConstraints" />

    <!--Boton para salir de la app (con bordes rojos)-->
    <Button
        android:id="@+id/buttonSalir"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="235dp"
        android:layout_height="70dp"
        android:layout_marginBottom="84dp"
        android:backgroundTint="@color/piel"
        android:text="      Salir      "
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/damasco"
        tools:ignore="HardcodedText,MissingConstraints" />

    <!--Imagen de inicio motivadora-->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="363dp"
        android:layout_height="316dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.11"
        app:srcCompat="@drawable/captura"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>